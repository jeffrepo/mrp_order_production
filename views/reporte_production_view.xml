<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- imprimiendo de forma horizontal -->
        <template id="reporte_production">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.internal_layout">
                        <t t-set="producto_agrupado" t-value="{}"/>
                        <t t-set="o" t-value="o.with_context(lang=lang)"/>
                        <div class="page">
                            <div class="oe_structure"/>
                            <div class="row">
                                <div class="col-7">
                                    <h2><span t-field="o.name">MRP-001</span></h2>
                                </div>
                            </div>
                        </div>

                        <div class="row mt32 mb32">
                            <div class="col-3" t-if="o.date">
                                <strong>Fecha:</strong><br/>
                                <span t-field="o.date">Vendor ABC</span>
                            </div>
                            <div class="col-3" t-if="o.create_uid">
                                <strong>Responsible:</strong><br/>
                                <span t-field="o.create_uid.name">John Doe</span>
                            </div>
                            <div class="col-3" t-if="o.date_mrp_production">
                                <strong>Fecha entrega:</strong><br/>
                                <span t-field="o.date_mrp_production">2023-09-15</span>
                            </div>
                            <div class="col-3" t-if="o.reference">
                                <strong>Referencia:</strong><br/>
                                <span t-field="o.reference"></span>
                            </div>
                        </div>

                        <h3>
                            <span>
                                Producto Terminado
                            </span>
                        </h3>

                        <table class="table table-sm">
                            <div class="oe_structure"></div>
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Cantidad</th>
                                    <th>Precio de venta</th>
                                    <th>Comentario</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.product_ids" t-as="linea">
                                    <td>
                                        <span t-field="linea.product_id">Mi producto</span>
                                    </td>
                                    <td >
                                        <span t-field="linea.quantity">2</span>
                                    </td>
                                    <td >
                                        <span t-field="linea.product_id.list_price"></span>
                                    </td>
                                    <td >
                                        <span t-field="linea.comment"></span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>


                        <h3>
                            <span>
                                Componentes
                            </span>
                        </h3>
                            
                            <t t-foreach="o.order_ids" t-as="op">
                                
                                <table class="table table-sm">
                                    <span t-field="op.product_id"/> / <span t-field="op.name"/>
                                    <div class="oe_structure"></div>
                                    <thead>
                                        <tr>
                                            <th>Producto</th>
                                            <th>Cantidad</th>
        
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="op.move_raw_ids" t-as="raw_line">
                                            <td>
                                                <span t-field="raw_line.product_id">8 GB RAM</span>
                                            </td>
                                            <td t-attf-class="{{ 'text-end' if not has_product_barcode else '' }}" t-if="o.state in ('progress', 'to_close','done')">
                                                <div>
                                                    <span t-field="raw_line.quantity">2</span>
                                                </div>
                                            </td>
                                            <td t-attf-class="{{ 'text-end' if not has_product_barcode else '' }}">
                                                <span t-field="raw_line.product_uom_qty">25</span>
                                                <span t-field="raw_line.product_uom" groups="uom.group_uom">Pieces</span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                
                            </t>

<!-- ====================== -->
<!-- COMPONENTES AGRUPADOS + PRODUCTOS SIN BOM + CATEGORÍA -->
<!-- ====================== -->
<h3>
    <span>Componentes agrupados</span>
</h3>

<t t-set="componentes_agrupados" t-value="dict()"/>

<!-- 1️⃣ Recorremos todas las órdenes de producción -->
<t t-foreach="o.order_ids" t-as="op">
    <t t-foreach="op.move_raw_ids" t-as="raw_line">

        <t t-set="product_name" t-value="raw_line.product_id.display_name"/>
        <t t-set="uom_name" t-value="raw_line.product_uom.name"/>
        <t t-set="categoria" t-value="raw_line.product_id.categ_id.display_name or ''"/>

        <t t-set="actual"
           t-value="componentes_agrupados.get(product_name, {'qty': 0.0, 'uom': uom_name, 'is_product': False, 'categoria': categoria})"/>
        <t t-set="nuevo_valor"
           t-value="dict(qty=actual['qty'] + raw_line.product_uom_qty, uom=uom_name, is_product=False, categoria=categoria)"/>
        <t t-set="componentes_agrupados"
           t-value="dict(list(componentes_agrupados.items()) + [(product_name, nuevo_valor)])"/>

    </t>
</t>

<!-- 2️⃣ Agregamos los productos terminados que NO tengan BOM -->
<t t-foreach="o.product_ids" t-as="linea">
    <t t-if="not any(order.product_id.id == linea.product_id.id for order in o.order_ids)">
        <t t-set="product_name" t-value="linea.product_id.display_name"/>
        <t t-set="uom_name" t-value="linea.product_id.uom_id.name"/>
        <t t-set="categoria" t-value="linea.product_id.categ_id.display_name or ''"/>
        <t t-set="cantidad" t-value="linea.quantity"/>

        <t t-set="actual"
           t-value="componentes_agrupados.get(product_name, {'qty': 0.0, 'uom': uom_name, 'is_product': True, 'categoria': categoria})"/>
        <t t-set="nuevo_valor"
           t-value="dict(qty=actual['qty'] + cantidad, uom=uom_name, is_product=True, categoria=categoria)"/>
        <t t-set="componentes_agrupados"
           t-value="dict(list(componentes_agrupados.items()) + [(product_name, nuevo_valor)])"/>
    </t>
</t>

<!-- 3️⃣ Mostramos tabla -->
<table class="table table-sm mt16">
    <thead>
        <tr>
            <th style="width:35%">Producto / Componente</th>
            <th style="width:20%">Categoría</th>
            <th class="text-end" style="width:15%">Cantidad total</th>
            <th style="width:15%">Unidad</th>
            <th style="width:15%">Tipo</th>
        </tr>
    </thead>
    <tbody>
        <t t-foreach="sorted(componentes_agrupados.items())" t-as="item">
            <tr>
                <td><span t-esc="item[0]"/></td>
                <td><span t-esc="item[1]['categoria']"/></td>
                <td class="text-end">
                    <span t-esc="'%.2f' % (item[1]['qty'] or 0.0)"/>
                </td>
                <td><span t-esc="item[1]['uom']"/></td>
                <td>
                    <t t-if="item[1]['is_product']">
                        <span>Producto</span>
                    </t>
                    <t t-else="">
                        <span>Componente</span>
                    </t>
                </td>
            </tr>
        </t>
    </tbody>
</table>

<!-- 4️⃣ Firmas -->
<div class="mt32" style="border-top: 1px solid #ccc; padding-top: 16px;">
    <div class="row">
        <div class="col-6 text-center">
            <span><strong>Recibido por:</strong> ________________________</span>
        </div>
        <div class="col-6 text-center">
            <span><strong>Etiquetado por:</strong> ________________________</span>
        </div>
    </div>
</div>




                    
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>